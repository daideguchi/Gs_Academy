{
  "name": "vuefire",
  "version": "3.0.0-alpha.2",
  "description": "Some awesome description",
  "main": "dist/vuefire.cjs.js",
  "unpkg": "dist/vuefire.global-vue-2.js",
  "jsdelivr": "dist/vuefire.global-vue-2.js",
  "module": "dist/vuefire.esm-bundler.js",
  "types": "dist/vuefire.d.ts",
  "sideEffects": false,
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "scripts": {
    "docs": "vitepress dev docs",
    "build:docs": "vitepress build docs",
    "build": "rollup -c rollup.config.js",
    "build:dts": "api-extractor run --local --verbose",
    "release": "bash scripts/release.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "size": "size-limit",
    "lint": "prettier -c --parser typescript \"{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "yarn run lint --write",
    "test:types": "tsc --build tsconfig.json",
    "test:unit": "jest --coverage",
    "test": "yarn run test:types && yarn run test:unit && yarn run build && yarn run build:dts"
  },
  "files": [
    "dist/*.js",
    "dist/vuefire.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "vue",
    "firebase",
    "vuefire",
    "vuexfire",
    "vuex",
    "composition",
    "api"
  ],
  "license": "MIT",
  "devDependencies": {
    "@docsearch/css": "^1.0.0-alpha.22",
    "@docsearch/js": "^1.0.0-alpha.22",
    "@microsoft/api-extractor": "7.8.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@size-limit/preset-small-lib": "^4.5.5",
    "@types/jest": "^26.0.17",
    "@types/jsdom": "^16.2.3",
    "@vue/test-utils": "^2.0.0-beta.1",
    "algoliasearch": "^4.8.2",
    "codecov": "^3.7.2",
    "conventional-changelog-cli": "^2.0.34",
    "firebase": "^8.1.2",
    "firebase-mock": "^2.3.2",
    "focus-visible": "^5.2.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "pascalcase": "^1.0.0",
    "prettier": "^2.0.5",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "size-limit": "^4.5.5",
    "ts-jest": "^26.1.4",
    "typescript": "^4.0.2",
    "vitepress": "^0.9.0",
    "vue": "^3.0.0-rc.5",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "size-limit": [
    {
      "path": "size-checks/vuefire-firestore.js"
    },
    {
      "path": "size-checks/vuefire-rtdb.js"
    },
    {
      "path": "size-checks/vuefire-full.js"
    }
  ],
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-beta.1",
    "vue": "^2.0.0 || >=3.0.0-rc.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posva/vuefire.git"
  },
  "bugs": {
    "url": "https://github.com/posva/vuefire/issues"
  },
  "homepage": "https://github.com/posva/vuefire#readme",
  "dependencies": {
    "vue-demi": "^0.4.5"
  }
}
